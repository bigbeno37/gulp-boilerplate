doctype html
html.no-js(lang="en")
  head
    include pug/head.pug

  body
    +ie('if IE')
      .browsehappy
        p
          | You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/" target="_blank">upgrade your browser</a> to improve your experience
          
    // The container that contains the div that houses the main text
    .container
      // The div that houses the main text
      .center-box
        h1 
          b Gulp Boilerplate
        h5
          em A simple and easy to use boilerplate for your next big online creation

        br


        h4
          code npm install
          br
          code gulp
        br

        .button.button-primary Download



    // The +ie and +ieSpecial functions come from utils.pug if you wanna check 'em out
    +ie('if lt IE 9')
      script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
      script window.jQuery || document.write('<script src="dist/js/vendor/jquery-1.11.2.min.js"><\/script>')

    +ieSpecial('if gt IE')
      script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
      script window.jQuery || document.write('<script src="dist/js/vendor/jquery-2.1.3.min.js"><\/script>')

    // The actual JS files
    script(src="dist/js/plugins.js")
    script(src="dist/js/script.js")